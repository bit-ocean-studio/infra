    "prettier:fix": "pnpm nx run-many -t prettier:fix --all",
    "release:generate": "pnpm changeset",
    "release:version": "pnpm changeset version",
    "release:publish": "pnpm build:packages && pnpm changeset publish",
    "bo:cspell": "pnpm bo cspell",
    "cz": "git-cz",
    "prepare": "husky"
  },
