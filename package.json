{
  "name": "@bit-ocean/infra",
  "description": "ðŸš€ Built reliable infrastructure for Bit Ocean.",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "scripts": {
    "build:packages": "pnpm nx run-many -t build -p @bit-ocean/* --verbose",
    "lint:check": "pnpm nx run-many -t type:check cspell:check prettier:check --all --parallel=10",
    "type:check": "pnpm nx run-many -t type:check --all",
    "cspell:sort:dicts": "pnpm --filter @bit-ocean/cspell sort:dicts",
    "cspell:check": "pnpm nx run-many -t cspell:check --all",
    "prettier:check": "pnpm nx run-many -t prettier:check --all",
    "prettier:fix": "pnpm nx run-many -t prettier:fix --all",
    "release:generate": "pnpm nx release --skip-publish",
    "release:version": "pnpm nx release version",
    "release:changelog": "pnpm nx release changelog",
    "release:publish": "pnpm nx release publish",
    "cz": "git-cz",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "^14.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@bit-ocean/commitlint-config": "workspace:^",
    "@bit-ocean/cspell": "workspace:^",
    "@bit-ocean/prettier-config": "workspace:^",
    "@bit-ocean/tsconfig": "workspace:^",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@nx/js": "^18.2.1",
    "@swc-node/register": "^1.9.0",
    "@swc/core": "^1.4.11",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "bun": "^1.0.35",
    "commitizen": "^4.3.0",
    "cspell": "^8.6.1",
    "cz-git": "^1.9.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "nx": "^18.2.1",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "tsup": "^8.0.2",
    "typescript": "~5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "license": "MIT"
}
